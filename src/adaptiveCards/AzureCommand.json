            { "title": "Poland Central", "value": "polandcentral" }
          ],
        "isRequired": true,
        "errorMessage": "Please select a location."
      },
      {
        "type": "Input.Text",
        "id": "exactCPU",
        "placeholder": "Enter Exact CPU Required",
        "label": "Exact CPU"
      },
      {
        "type": "Input.Text",
        "id": "minCPU",
        "placeholder": "Enter Min CPU",
        "label": "Min CPU"
      },
      {
        "type": "Input.Text",
        "id": "minMemory",
        "placeholder": "Enter Min Memory",
        "label": "Min Memory"
      }
    ]
    ,
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Submit",
        "data": {
          "action": "submit"
        }
      }
    ]
}

  
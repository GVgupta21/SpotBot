{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
      {
        "type": "TextBlock",
        "text": "Enter Configuration Details",
        "weight": "Bolder",
        "size": "Medium"
      },
      {
        "type": "Input.Text",
        "id": "ratio",
        "placeholder": "Enter Ratio",
        "label": "Ratio",
        "isRequired": true
      },
      {
        "type": "Input.ChoiceSet",
        "id": "location",
        "placeholder": "Select a location",
        "label":"Location",
